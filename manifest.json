{
  "name": "Amazon-IL Free Shipping Marker",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Mark products which ship to Israel with Free Shipping with orders over $49.00",
  "icons": {
    "16": "icons/icon16.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon64.png",
    "default_title": "Amazon-IL Free Shipping Marker"
  },
  "permissions": [
    "https://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*"
      ],
      "css": [
        "src/code/styles.css"
      ]
    },
    {
      "matches": [
        "https://www.amazon.com/*"
      ],
      "js": [
        "src/code/jquery.min.js",
        "src/code/scripts.js"
      ]
    }
  ]
}